- var SocialLinkItems = [{name: 'facebook-f', url: 'facebook.com'}, {name: 'twitter', url: 'twitter.com'}, {name: 'google-plus-g', url: 'google.com'}, {name: 'linkedin-in', url: 'linkedin.com'}]

footer.footer
  .footer__top
    .container
      .footer__title Get in touch
      .footer__links
        each item in SocialLinkItems
          a(href="http://" + item.url target="_blanc").footer__links-item
            i(class="fab fa-" + item.name)
      
      .footer__text Subscribe to our newsletter to stay update with what is new

      form(method="POST", action="#")
        .footer__field: input.footer__input(type="email" placeholder="Email Adress")
        button(type="submit").button Subscribe

  
